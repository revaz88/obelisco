{% extends "install/install.html.twig" %}

{% block content %}
    <div id="step_0">
        <h2>{% trans %}Bienvenido a la instalación del Sistema de Gestión de Turnos{% endtrans %}</h2>
        
        <p>{% trans %}Por favor elija su sistema de Base de Datos preferido a partir de los listados abajo:{% endtrans %}</p>
        <ul class="adapters">
            {% for script in scripts %}
            <li id="adapter-{{ script.id }}" class="{% if currAdapter == script.id %}bg-primary{% else %}bg-default{% endif %}">
                <input id="{{ script.id }}" type="radio" name="db" value="{{ script.id }}" onclick="setTimeout(function() { SGA.Install.chooseAdapter('{{ script.id }}')}, 100)" {% if currAdapter == script.id %}checked="checked"{% endif %} />
                <label for="{{ script['id'] }}">
                    <span class="adapter">{{ script.adapter }}</span>
                    <span class="info author">{% trans%}Autor{% endtrans %}:</span>
                </label>
            </li>
            {% endfor %}
        </ul>
        <p>{% trans %}Los requisitos para la instalación del sistema dependerán de la opción seleccionada anteriormente.{% endtrans %}</p>
    </div>
{% endblock %}